<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/privacy"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/privacy_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/privacy_subtitle"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginHorizontal="5dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"/>

        <TextView android:id="@+id/permission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1. READ INCOMING SMS"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textColor="@color/app_primary_light"
            android:textStyle="bold"/>

        <TextView android:id="@+id/permission_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(To automatically read the SMS and retrieve OTP)"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginHorizontal="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_primary_light"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"/>


        <TextView android:id="@+id/positive_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@color/app_primary_light"
            tools:text="allow permissions"/>

        <TextView android:id="@+id/negative_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/app_primary_light"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            tools:text="Don't Allow. Enter OTP manually"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>